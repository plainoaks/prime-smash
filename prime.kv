#:import randint random.randint


<PrimeBall>:
    size: 100, 100
    canvas:
        Color:
            rgb: 0.2, 0.5, 0.8
        Ellipse:
            pos: self.pos
            size: self.size
    Label:
        color: [1,1,1,2]
        pos: root.pos
        font_size: 50
        text: str(root.value)

<PrimeSmash>:
    p_ball: p_ball
    player: player

    Label:
        text: "score "+str(player.score)
        top: root.top
        center_x: root.center_x

    Player:
        id: player

    PrimeBall:
        id: p_ball
        center: (randint(self.width/2,root.width-self.width/2), root.height-self.height/2)
